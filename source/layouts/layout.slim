doctype html
html
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title= current_page.data.title || "Tasukuru"
    = stylesheet_link_tag "normalize"
    = stylesheet_link_tag 'http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css'
    = stylesheet_link_tag 'http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css'
    = javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.0.min.js'
    = javascript_include_tag 'http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js'
    = stylesheet_link_tag 'all'
    = javascript_include_tag 'tasukuru'
  body
    header.container
      h2
        = current_page.data.title
        small<= current_page.data.subtitle
    hr
    .container
      .row
        .col-md-12
          = yield
    hr
    footer.container
      p &copy; kayhide 2014

